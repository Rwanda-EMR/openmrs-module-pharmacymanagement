	</bean>
		
	<bean id="conceptDrugHandler" class="@MODULE_PACKAGE@.phcymgt.web.controller.ConceptDrugHandler">
		<property name="viewName">
			<value>json.htm</value>
		</property>
		<property name="viewRenderer">
			<ref bean="ajaxViewRenderer" />
